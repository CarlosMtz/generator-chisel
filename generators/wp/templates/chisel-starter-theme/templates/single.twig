{% extends "layouts/base.twig" %}

{% block content %}
  <article class="c-post" id="post-{{post.ID}}">
    <section>
      <h1 class="c-post__title">{{post.title}}</h1>
      <p class="c-post__author">
        <span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.post_date|date}}
      </p>
      <div class="c-post__content">
        {{post.content}}
      </div>
    </section>
  {% if post.comment_status != 'closed' %}
    <section class="c-comments">
      <div class="c-respond">
        <h2>Comments</h2>
        {{ fn('comment_form') }}
      </div>
      <div class="c-responses">
        {% for cmt in post.get_comments() %}
          {% include "partials/comment.twig" with {comment:cmt} %}
        {% endfor %}
      </div>
    </section>
  {% endif %}
  </article>

{% endblock %}
